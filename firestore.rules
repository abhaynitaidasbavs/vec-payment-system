rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user email from token
    // Firebase Auth stores email in different places depending on provider
    function getUserEmail() {
      return request.auth.token.email;
    }
    
    // Helper function to check if user is an admin
    // Checks if the authenticated user's email matches allowed admin emails
    function isAdmin() {
      return isAuthenticated() && 
             (getUserEmail() == 'aksahoo.919@gmail.com' ||
              getUserEmail() == 'abhaynitaidas.bavs@gmail.com');
    }
    
    // Cities Collection
    match /cities/{cityId} {
      // Allow public read access (for student form dropdown)
      allow read: if true;
      
      // Allow admins to create, update, and delete cities
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Schools Collection
    match /schools/{schoolId} {
      // Allow public read access (for student form dropdown)
      allow read: if true;
      
      // Allow admins to create, update, and delete schools
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Payments Collection
    match /payments/{paymentId} {
      // Allow anyone to create payment records (for payment processing)
      allow create: if true;
      
      // Allow admins to read all payments
      allow read: if isAdmin();
      
      // Prevent updates and deletes (payments should be immutable)
      allow update: if false;
      allow delete: if false;
    }
    
    // Deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

