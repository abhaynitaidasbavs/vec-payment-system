rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // TEMPORARY TESTING RULES - REMOVE AFTER TESTING
    // This allows all authenticated users to perform operations
    // Use this to verify that authentication is working
    
    // Cities Collection
    match /cities/{cityId} {
      allow read: if true;
      allow write: if request.auth != null; // Any authenticated user
    }
    
    // Schools Collection
    match /schools/{schoolId} {
      allow read: if true;
      allow write: if request.auth != null; // Any authenticated user
    }
    
    // Payments Collection
    match /payments/{paymentId} {
      allow create: if true;
      allow read: if request.auth != null;
      allow update, delete: if false;
    }
  }
}

